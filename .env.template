# Copy this to .env and fill in real values for production/testing
# Stripe
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
# Price IDs for plans (set real Price IDs from your Stripe dashboard)
STRIPE_PRICE_PREMIUM_MONTHLY=
STRIPE_PRICE_PREMIUM_YEARLY=
STRIPE_PRICE_PRO_MONTHLY=
STRIPE_PRICE_PRO_YEARLY=

# Licensing JWT secret (used to sign entitlement tokens)
LICENSING_JWT_SECRET=dev_secret_change_me

# Port to run the licensing server
LICENSING_PORT=5001

# Encryption key for subscriptions/processed events when you want data-at-rest encryption.
# Provide a passphrase; a 32-byte key will be derived via SHA-256. Example:
# SUBS_ENCRYPTION_KEY=some-long-random-passphrase
